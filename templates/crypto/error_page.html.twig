{% extends 'base.html.twig' %}

{% block title %}Error Page{% endblock %}
 
{% block body %}

<div class="row justify-content-between my-3 align-items-center">
    <div class="col-2">
        <a href="{{ path('accueil')}}" class="text-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="25" height="25" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
                <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
            </svg>
        </a>
    </div>

    <div class="col-7 col-xl-4">
        <h1 class="text-center" style="font-weight: 700;">Un problème est survenu</h1>
    </div>

    <div class="col-2">
    </div>

    <hr class="my-3">
</div>

<div class="row justify-content-around">
    <div class="col-10 col-xl-8">
        <h2>{{ message }}</h2>
        <p>Vous allez être redirigé vers l'accueil</p>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    $(document).ready( function () {
        window.setTimeout(function(){
            location.href = "{{ path('accueil') }}";
        }, 30000);
    } );
</script>
{% endblock %}